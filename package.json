{
  "name": "msz-todolist",
  "version": "0.1.2",
  "author": "Marcin Szyda",
  "description": "Haha lista zadaÅ„ robii brr",
  "homepage": ".",
  "main": "build/electron/main.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/tarkeztarkez/msztodolist-pc.git"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "26.0.15",
    "@types/node": "14.14.9",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/uuid": "^8.3.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "electron-updater": "^4.3.5",
    "firebase": "^8.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-firebase-hooks": "^2.2.0",
    "react-scripts": "4.0.1",
    "typescript": "4.1.2",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:windev": "concurrently \"SET BROWSER=none && yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:build": "yarn build && tsc -p electron && electron-builder --win --publish never",
    "electron:publish": "yarn build && tsc -p electron && electron-builder --win --publish always",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "com.tarkeztarkez.msztodolist",
    "productName": "MSZTodolist",
    "publish": [
      {
        "provider": "github",
        "owner": "tarkeztarkez",
        "repo": "msztodolist-pc"
      }
    ],
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "wait-on": "^5.2.0"
  }
}
